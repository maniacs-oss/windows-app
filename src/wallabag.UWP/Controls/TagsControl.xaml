<UserControl
    x:Class="wallabag.Controls.TagsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="52" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            x:Uid="NoTagsInfoTextBlock"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Opacity="0.8"
            Text="No tags added, yet :("
            Visibility="{x:Bind ViewModel.TagsCountIsZero, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <ListView
            IsItemClickEnabled="True"
            ItemClick="TagsListView_ItemClick"
            ItemsSource="{x:Bind ViewModel.Tags, Mode=OneWay}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Auto"
            ScrollViewer.VerticalScrollMode="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                        <StackPanel
                            Margin="12,8"
                            Orientation="Horizontal"
                            RequestedTheme="Dark">
                            <TextBlock
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                FontFamily="Segoe MDL2 Assets"
                                Text="&#xE1CB;" />
                            <TextBlock Text="{Binding}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="4,0" />
                    <Setter Property="MinWidth" Value="0" />
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <AutoSuggestBox
            x:Name="autoSuggestBox"
            x:Uid="EnterTagAutoSuggestBox"
            Grid.Row="1"
            VerticalAlignment="Bottom"
            ItemsSource="{x:Bind ViewModel.Suggestions, Mode=OneWay}"
            PlaceholderText="enter a tag…"
            QueryIcon="Add"
            Text="{x:Bind ViewModel.TagQuery, Mode=TwoWay}" />
    </Grid>
</UserControl>
