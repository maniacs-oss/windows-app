<Page
    x:Class="wallabag.Views.ItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:wallabag.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:wallabag.ViewModels"
    xmlns:was="using:AppStudio.Uwp.Controls"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:ItemPageViewModel />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <FlipView>
            <FlipViewItem x:Name="previousItem" />
            <FlipViewItem x:Name="currentItem">
                <was:HtmlViewer x:Name="HtmlViewer" Html="{x:Bind ViewModel.Item.Model.Content}" />
            </FlipViewItem>
            <FlipViewItem x:Name="nextItem" />
        </FlipView>
    </Grid>
</Page>
