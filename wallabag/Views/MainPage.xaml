<Page
    x:Class="wallabag.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:wallabag.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:wallabag.ViewModels"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:MainViewModel />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <CommandBar Background="Transparent">
            <AppBarButton Icon="Add" Label="Add" 
                Command="{x:Bind ViewModel.AddCommand}"/>
            <AppBarButton
                Command="{x:Bind ViewModel.SyncCommand}"
                Icon="Sync"
                Label="Sync" />
            <AppBarButton Icon="Find" Label="Search" />
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="Settings" />
            </CommandBar.SecondaryCommands>
            <CommandBar.Content>
                <TextBlock
                    Margin="12"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="UNREAD" />
            </CommandBar.Content>
        </CommandBar>
        <SplitView Grid.Row="1" IsPaneOpen="True">
            <SplitView.Content>
                <GridView Grid.Row="1" />
            </SplitView.Content>
            <SplitView.Pane>
                <RelativePanel>
                    <!-- TODO -->
                </RelativePanel>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>
